<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @post.tags %>
</p>
<table>
<tr><td><h4>Comments</h4></td></tr>
      <% @post.comments.each do |c|%>
        <tr><td><%= c.comment %>&nbsp;&nbsp;By: <%= c.user.name %></td></tr>
      <% end %>
      </tr>
      </table>
<h4>Add comment here</h4>
<%= form_with(scope: :comment,url:comments_path,class:"addNewCommentForm",method: :post,local:true) do |f| %>
  <%= f.text_field :comment %>
  <%= f.hidden_field :post_id_for_comment, value: @post.id %>
  <%= f.submit "Add" %>
<% end %>  
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
